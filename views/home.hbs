<div class="container content">
  {{#each posts}}
    <div class="row post">
      <div class="col-md-3"></div>
      <div class="col-md-6">
          {{{vid}}}
          <h5>
            {{#each tags}}
              <span class="tag tag-default">{{this}}</span>
            {{/each}}
          </h5>
          <button onclick="upVote('{{id}}')">
            <i class="fa fa-level-up fa-fw" aria-hidden="true"></i>&nbsp;&nbsp;
            <span id="{{id}}">{{votes}}</span>
          </button>
      </div>
      <div class="col-md-3"></div>
    </div>
  {{/each}}
</div>
